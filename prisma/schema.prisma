generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model HabitRecord {
  id      Int    @id @default(autoincrement())
  date    DateTime
  status  String
  habit   Habit  @relation(fields: [habitId], references: [id])
  habitId Int
  @@unique([date, habitId], name: "habitRecordIdentifier")
}

model Habit {
  id          Int           @id @default(autoincrement())
  name        String
  HabitRecord HabitRecord[]
}
